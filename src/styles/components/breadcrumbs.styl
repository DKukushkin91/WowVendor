.breadcrumbs
	width 100%

	&__list
		margin 0
		padding 0
		padding-bottom 16px
		list-style: none
		display flex
		flex-direction: row

	&__item
		display inline-block
		vertical-align: middle

		&:not(:last-child)::after
			content: ''
			width 5px
			height: 8px
			display inline-block
			vertical-align: middle
			background-image: url("data:image/svg+xml,%3Csvg width='5' height='8' viewBox='0 0 5 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M4.4002 3.99999L4.82446 4.42425C5.05877 4.18994 5.05877 3.81004 4.82446 3.57572L4.4002 3.99999ZM1.62446 0.375724C1.39015 0.141409 1.01025 0.141409 0.775932 0.375724C0.541617 0.610038 0.541617 0.989937 0.775932 1.22425L1.62446 0.375724ZM0.775931 6.77572C0.541617 7.01004 0.541617 7.38994 0.775931 7.62425C1.01025 7.85857 1.39014 7.85857 1.62446 7.62425L0.775931 6.77572ZM0.775932 1.22425L3.97593 4.42425L4.82446 3.57572L1.62446 0.375724L0.775932 1.22425ZM3.97593 3.57572L0.775931 6.77572L1.62446 7.62425L4.82446 4.42425L3.97593 3.57572Z' fill='%23D0D5DD'/%3E%3C/svg%3E%0A")
			background-size: 100% 100%
			margin: 0 13px 0 15px

	&__link
		font-size: 14px
		line-height 20px
		text-decoration: none
		color $content-500
		font-weight 500

	&__link-current
		font-size 14px
		line-height 20px
		color $content-300
		font-weight 500
