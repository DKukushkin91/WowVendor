.mob-nav
	width 100%
	position: fixed
	bottom 0
	z-index 9999
	background-color: $base-white
	border-top-left-radius: 8px
	border-top-right-radius: 8px
	box-shadow: 0px -12px 12px -4px rgba(16, 24, 40, 0.02);

	@media $lg
		display none

	&__list
		list-style: none
		padding 12px 20px
		margin 0
		display flex
		justify-content: space-between

		@media $md
			padding: 14px 60px 12px 60px

	&__item
		&:not(:last-child)
			margin-right 10px

	&__link
		text-decoration: none
		font-size 10px
		line-height 14px
		color $content-400
		display flex
		flex-direction: column
		align-items: center

	&__link--active .mob-nav__icon,
	&__link--active .mob-nav__text
		fill: $primary-600
		color $primary-600

	&__icon
		fill $content-900
