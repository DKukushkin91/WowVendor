.faq
	width 100%

	&__title
		font-size 24px
		line-height 28px
		font-weight 600
		color $content-900
		padding-bottom 16px

		@media $md
			text-align: center
			font-size 32px
			line-height 38px

	&__sub-title
		font-size 16px
		line-height 24px
		font-weight 400
		color $content-500
		padding-bottom 44px

		@media $md
			text-align: center
			padding-bottom 47px

	&__fieldset
		border: 0
		padding 0
		margin 0

		&:not(:last-child)
			border-bottom: 1px solid $content-200
			margin-bottom 24px

	&__legend
		display flex
		align-items: center
		justify-content: space-between
		width 100%
		padding 0
		padding-bottom 25px

	&__legend-text
		font-size 18px
		line-height 24px
		font-weight 600
		color $content-900
		margin-right 24px

	&__btn
		background: 0
		border: 0
		width 16px
		height 16px

	&__icon
		fill $primary-600

	&__content
		width 100%
		height 0
		overflow: hidden

	&__content--active
		height 100%
		padding-bottom 41px

	&__text
		font-size 16px
		line-height 24px
		font-weight 400
		color $content-500

		&:not(:last-child)
			padding-bottom 20px

	&__text--bold
		font-weight 500
		color $content-900

		&:not(:last-child)
			padding-bottom 16px

	&__list
		list-style: none
		margin 0
		padding 0
		padding-bottom 29px

	&__item
		position relative
		display flex
		align-items: center
		font-size 16px
		line-height 24px
		font-weight 400
		color $content-500

		&::before
			content: ''
			width 6px
			height 6px
			background-color: $primary-600
			margin-right 12px
			border-radius: 50%
			flex 0 0 6px

		&:not(:last-child)
			padding-bottom 6px

