.footer
	width 100%
	background-color $content-800

	&__container
		width 100%
		padding: 32px 20px 98px 20px
	
	&__menu
		width 100%
	
	&__list
		list-style: none
		padding 0
		padding-bottom 48px
		margin 0
	
	&__item
		width 100%
		
		&:not(:last-child)
			padding-bottom 32px
	
	&__sub-title
		font-size 14px
		line-height 20px
		font-weight 500
		color $content-400
		padding-bottom 20px
		display block
	
	&__list-link
		list-style: none
		padding 0
		margin 0
	
	&__item-link
		&:not(:last-child)
			padding-bottom 8px
		
	&__link
		font-size 16px
		line-height 24px
		font-weight 500
		color $content-100
		text-decoration: none
	
	&__copyright
		width 100%
	
	&__copyright-text
		font-size 16px
		line-height 24px
		font-weight 400
		color $content-500
		text-align: left