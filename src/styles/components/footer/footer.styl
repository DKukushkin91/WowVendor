.footer
	width 100%
	background-color $content-800

	&__container
		width 100%
		padding: 32px 20px 98px 20px

		@media $md
			padding: 58px 24px 98px 24px

		@media $lg
			padding 56px 24px 34px 24px

		@media $xl
			margin: 0 auto
			max-width: 1440px
			padding 56px 112px 64px 112px

	&__menu
		width 100%

	&__list
		list-style: none
		padding 0
		padding-bottom 48px
		margin 0

		@media $sm
			display flex

		@media $md
			padding-bottom 91px

	&__item
		width 100%

		&:not(:last-child)
			padding-bottom 32px

			@media $sm
				padding: 0
				margin-right 20px

	&__sub-title
		font-size 14px
		line-height 20px
		font-weight 500
		color $content-400
		padding-bottom 20px
		display block

	&__list-link
		list-style: none
		padding 0
		margin 0

	&__item-link
		&:not(:last-child)
			padding-bottom 8px

	&__link
		font-size 16px
		line-height 24px
		font-weight 500
		color $content-100
		text-decoration: none

	&__copyright
		width 100%

	&__copyright-text
		font-size 16px
		line-height 24px
		font-weight 400
		color $content-500
		text-align: left
