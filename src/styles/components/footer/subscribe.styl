.subscribe
	border-bottom: 1px solid $content-700
	margin-bottom 32px

	&__content
		padding-bottom 32px
		
	&__title
		font-size: 18px
		line-height 24px
		padding-bottom 4px
		color $base-white
		font-weight 600
	
	&__text
		font-size: 16px
		line-height 24px
		font-weight 400
		color $content-400
	
	&__form
		width 100%
		padding-bottom 33px

	&__input
		width 100%
		border 1px solid $content-300
		border-radius: 8px
		background: $base-white
		margin-bottom 8px
		padding: 10px 18px
		font-size 16px
		line-height 24px
		font-family $Inter
		font-weight 500
		color $content-800
		outline: none

		&::placeholder
			color $content-400

		&:focus
			border-color: $content-400

	&__btn
		border: 0
		background-color: $primary-600
		border-radius: 8px
		width 100%
		padding: 10px 101px
		display block
		text-align: center
	
	&__btn-text
		font-size 16px
		line-height 24px
		font-weight 500
		color $base-white
		