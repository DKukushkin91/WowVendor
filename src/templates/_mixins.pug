mixin picture(name, baseDir)
	picture
		source(srcset=`${baseDir}/img/responsive/m-${name}@1x.webp 1x, ${baseDir}/img/responsive/m-${name}@2x.webp 2x` media='(min-width: 575px)' type="image/webp")
		source(srcset=`${baseDir}/img/responsive/m-${name}@1x.png 1x, ${baseDir}/img/responsive/m-${name}@2x.png 2x` media='(min-width: 575px)' type="image/png")
		source(srcset=`${baseDir}/img/responsive/${name}@1x.webp 1x, ${baseDir}/img/responsive/${name}@2x.webp 2x` type="image/webp")
		source(srcset=`${baseDir}/img/responsive/${name}@1x.png 1x, ${baseDir}/img/responsive/${name}@2x.png 2x` type="image/png")
		img(src=`${baseDir}/img/responsive/${name}@1x.png` alt=altName)

mixin bg-picture(name, baseDir)
	picture
		source(srcset=`${baseDir}/img/${name}.jpg` media='(min-width: 575px)' type="image/jpg")
		img(src=`${baseDir}/img/m-${name}.jpg` alt=altName)

mixin breadcrumbs(items, last)
	.breadcrumbs
		ul.breadcrumbs__list&attributes(attributes)
			each item in items
				li.breadcrumbs__item
					a(href="#" title=item).breadcrumbs__link=item

			if last
				li.breadcrumbs__item
					span.breadcrumbs__link-current=last
