mixin picture(name, altName, baseDir)
	picture
		source(srcset=`${baseDir}/img/responsive/m-${name}@1x.webp 1x, ${baseDir}/img/responsive/m-${name}@2x.webp 2x` media='(max-width: 639px)' type="image/webp")
		source(srcset=`${baseDir}/img/responsive/m-${name}@1x.png 1x, ${baseDir}/img/responsive/m-${name}@2x.png 2x` media='(max-width: 639px)' type="image/png")
		source(srcset=`${baseDir}/img/responsive/${name}@1x.webp 1x, ${baseDir}/img/responsive/${name}@2x.webp 2x` type="image/webp")
		source(srcset=`${baseDir}/img/responsive/${name}@1x.png 1x, ${baseDir}/img/responsive/${name}@2x.png 2x` type="image/png")
		img(src=`${baseDir}/img/responsive/${name}@1x.png` alt=altName)

mixin breadcrumbs(items, last)
	.breadcrumbs
		ul.breadcrumbs__list&attributes(attributes)
			each item in items
				li.breadcrumbs__item
					a(href="#" title=item).breadcrumbs__link=item

			if last
				li.breadcrumbs__item
					span.breadcrumbs__link-current=last